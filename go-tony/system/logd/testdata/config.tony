# Configuration management example
# Usage: cat config.tony | o system logd client localhost:9000

# Set initial config
{meta: {}, patch: {path: "config", data: {app: {name: "myapp", version: "1.0.0", debug: false}, database: {host: "localhost", port: 5432, pool_size: 10}, features: {new_ui: false, analytics: true}}}}

# Read current config
{meta: {}, body: {path: "config"}}

# Enable debug mode
{meta: {}, patch: {path: "config.app.debug", data: true}}

# Update database pool size
{meta: {}, patch: {path: "config.database.pool_size", data: 20}}

# Enable new feature flag
{meta: {}, patch: {path: "config.features.new_ui", data: true}}

# Read just features
{meta: {}, body: {path: "config.features"}}

# Merge in new settings without overwriting existing
{meta: {}, patch: {path: "config.app", data: {build: "abc123"}}}
